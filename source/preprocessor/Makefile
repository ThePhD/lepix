TARFILES = Makefile lexer.mll parser.mly ast.mli pp.ml

OBJS = parser.cmo lexer.cmo pp.cmo

pp : $(OBJS)
	ocamlc -o pp.exe $(OBJS)

lexer.ml : lexer.mll
	ocamllex lexer.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

pp.tar.gz : $(TARFILES)
	cd .. && tar zcf pp.tar.gz $(TARFILES:%=pp/%)

.PHONY : clean
clean :
	del pp.exe parser.ml parser.mli lexer.ml *.cmo *.cmi

# Generated by ocamldep *.ml *.mli
pp.cmo: lexer.cmo parser.cmi ast.cmi 
pp.cmx: lexer.cmx parser.cmx ast.cmi 
parser.cmo: ast.cmi parser.cmi 
parser.cmx: ast.cmi parser.cmi 
lexer.cmo: parser.cmi 
lexer.cmx: parser.cmx 
parser.cmi: ast.cmi 
